    title Jumbotron Template for Bootstrap
    // Bootstrap core CSS
    
    // Custom styles for this template
    //link(href='jumbotron.css', rel='stylesheet')
  block variable
    - var req = {}
  body
    nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
      a.navbar-brand(href='/') Lieberlerts
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href='/teams') Teams
          li.nav-item 
            a.nav-link(href='/settings') Settings
          form.form-inline
            input.form-control.mr-sm-2(type='text', placeholder='Search', aria-label='Search')
            button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
        ul.navbar-nav.float: right(style={color: 'white'})
          if req.user
            if req.user
              if req.user.first_name
                |Welcome back #{req.user.first_name}
              else
                |Welcome back #{req.user.email}
          else
            li.nav-item
              a.nav-link(href='/login')
                |login
                span.sr-only (current)
        if req.user
          ul.navbar-nav.float: right
            li.nav-item
              a.nav-link(href='/logout') Logout
    block content
      
